+      snprintf(json_val, listen_buffer_size, "%s%c", YAJL_GET_STRING(v), '\0');
 
       DEBUG("sysevent plugin: adding jsonval: %s", json_val);
 
@@ -445,7 +445,7 @@ static void submit(const char *message, yajl_val *node,
 
